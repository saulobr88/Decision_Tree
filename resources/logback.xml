<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender de arquivo com rotação por tamanho -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Arquivo atual -->
        <file>./main.log</file>

        <!-- Política de rotação: mantém de 1 a 10 arquivos -->
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <!-- Padrão dos arquivos rotacionados: main.1.log ... main.10.log -->
            <fileNamePattern>./main.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <!-- Gatilho de rotação por tamanho (5MB) -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>5MB</maxFileSize>
        </triggeringPolicy>

        <!-- Layout equivalente ao seu PatternLayout do Log4j -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level %logger{1}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nível raiz DEBUG, somente para o arquivo (sem console) -->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>

</configuration>
